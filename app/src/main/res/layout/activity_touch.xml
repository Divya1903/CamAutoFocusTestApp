<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.touch2focustesting.TouchActivity">
    
    <com.example.touch2focustesting.PreviewSurfaceView
    	android:id="@+id/preview_surface"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
    </com.example.touch2focustesting.PreviewSurfaceView>
    
    <com.example.touch2focustesting.DrawingView
    	android:id="@+id/drawing_surface"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
    </com.example.touch2focustesting.DrawingView>
    
</FrameLayout>
